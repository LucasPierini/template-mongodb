services:

  # Container MongoDB Standalone
  mongodb:
    container_name: mongodb
    image: mongo:${MONGO_VERSION}
    hostname: mongodb
    environment:
      MONGO_INITDB_ROOT_USERNAME: ${MONGO_USERNAME}
      MONGO_INITDB_ROOT_PASSWORD: ${MONGO_PASSWORD}
    ports:
      - ${MONGO_PORT}:${MONGO_PORT}
    restart: always
    volumes:
      - mongo-volume:/data/db

volumes:
  mongo-volume:
